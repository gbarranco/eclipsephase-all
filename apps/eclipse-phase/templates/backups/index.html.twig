{% extends 'base.html.twig' %}

{% block title %}{% trans %}Backups{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Backups{% endtrans %}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{% trans %}Backup date{%  endtrans %}</th>
                <th>{% trans %}Backup character{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for backup in backups %}
            <tr>
                <td>{{ backup.backupDate ? backup.backupDate|date('d/m/Y H:i:s') : '' }}</td>
                <td>{{ backup.playableCharacter }}</td>
                <td>
                    <a href="{{ path('backups_show', {'id': backup.id}) }}">show</a>
                    <a href="{{ path('backups_edit', {'id': backup.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="168">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('backups_new') }}">Create new</a>
{% endblock %}
