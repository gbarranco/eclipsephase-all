{% extends 'base.html.twig' %}

{% block title %}{% trans %}Player{% endtrans %} : {{ player.playerName }}{% endblock %}

{% block body %}
    <h1>{% trans %}Player{% endtrans %} : {{ player.playerName }}</h1>

    <table class="table table-hover table-striped table-light">
        <tbody>
            <tr>
                <th scope="row">{% trans %}Player name{% endtrans %}</th>
                <td>{{ player.playerName }}</td>
            </tr>
            <tr>
                <th scope="row">{% trans %}Role{% endtrans %}</th>
                {% if 'ROLE_MJ' == player.roles %}
                    <td>MJ</td>
                {% elseif 'ROLE_PJ' == player.roles %}
                    <td>PJ</td>
                {% endif %}
            </tr>
        </tbody>
    </table>

    <div class="back">
        <a href="{{ path('player_index') }}">
            <i class="fas fa-angle-double-left">
                {% trans %}back to list{% endtrans %}
            </i>
        </a>
    </div>

    {{ include('player/_delete_form.html.twig') }}
{% endblock %}
