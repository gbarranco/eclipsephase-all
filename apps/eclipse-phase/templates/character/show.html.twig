{% extends 'base.html.twig' %}

{% block title %}{% trans %}Character{% endtrans %} : {{ character.characterName }}{% endblock %}

{% block body %}
    <h1>{% trans %}Character{% endtrans %} : {{ character.characterName }}</h1>

    <table class="table table-hover table-striped table-dark">
        <tbody>
            <tr>
                <th>{% trans %}Character name{% endtrans %}</th>
                <td>{{ character.characterName }}</td>
            </tr>
            <tr>
                <th>{% trans %}Player name{% endtrans %}</th>
                <td>{{ character.player }}</td>
            </tr>
            <tr>
                <th>{% trans %}Background{% endtrans %}</th>
                <td>{{ character.background }}</td>
            </tr>
            <tr>
                <th>Faction</th>
                <td>{{ character.faction }}</td>
            </tr>
            <tr>
                <th>{% trans %}Sexual identity{% endtrans %}</th>
                <td>{{ character.sexualIdentity }}</td>
            </tr>
            <tr>
                <th>{% trans %}Age{% endtrans %}</th>
                <td>{{ character.age }}</td>
            </tr>
            <tr>
                <th>{% trans %}Audacity points{% endtrans %}</th>
                <td>{{ character.audacityPoints }}</td>
            </tr>
            <tr>
                <th>{% trans %}Xp{% endtrans %}</th>
                <td>{{ character.xp }}</td>
            </tr>
            <tr>
                <th>@-rep</th>
                <td>{{ character.aRep }}</td>
            </tr>
            <tr>
                <th>G-rep</th>
                <td>{{ character.gRep }}</td>
            </tr>
            <tr>
                <th>C-rep</th>
                <td>{{ character.cRep }}</td>
            </tr>
            <tr>
                <th>I-rep</th>
                <td>{{ character.iRep }}</td>
            </tr>
            <tr>
                <th>E-rep</th>
                <td>{{ character.eRep }}</td>
            </tr>
            <tr>
                <th>R-rep</th>
                <td>{{ character.rRep }}</td>
            </tr>
            <tr>
                <th>F-rep</th>
                <td>{{ character.fRep }}</td>
            </tr>
            <tr>
                <th>{% trans %}Attributes{% endtrans %}</th>
                <td>{{ character.attributes }}</td>
            </tr>
            <tr>
                <th>ID-Infos</th>
                <td>{{ character.idInfos }}</td>
            </tr>
            <tr>
                <th>{% trans %}Psi passes{% endtrans %}</th>
                <td>{{ character.psiPasses }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ character.notes }}</td>
            </tr>
        </tbody>
    </table>

    <div class="back">
        <a href="{{ path('character_index') }}">
            <i class="fas fa-angle-double-left">
                {% trans %}back to list{% endtrans %}
            </i>
        </a>
    </div>

    {{ include('character/_delete_form.html.twig') }}
{% endblock %}
